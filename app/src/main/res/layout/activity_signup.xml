<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignupActivity"
    android:background="#000066"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing user?"
        android:onClick="onClick"
        android:textColor="#9999ff"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="onClick"
        android:textColor="#ffaa00"
        android:textSize="15sp"
        />

    <EditText
        android:drawableStart="@drawable/ic_outline_person_outline_24"
        android:id="@+id/editTextTextPersonName"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint=" Name"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundstyle"
        android:padding="20px"
        android:textColorHint="#D9ffffff"
        android:backgroundTint="#0000e6"
        />

    <EditText
        android:drawableStart="@drawable/ic_outline_email_24"
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint=" Email"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundstyle"
        android:padding="20px"
        android:inputType="textEmailAddress"
        android:textColorHint="#D9ffffff"
        android:backgroundTint="#0000e6"/>

    <EditText
        android:drawableStart="@drawable/ic_outline_home_24"
        android:id="@+id/editTextTextPostalAddress"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/roundstyle"
        android:hint=" Postal Address"
        android:layout_marginTop="20dp"
        app:cornerRadius="28dp"
        android:padding="20px"
        android:inputType="textPostalAddress"
        android:textColorHint="#D9ffffff"
        android:backgroundTint="#0000e6"/>

    <EditText
        android:drawableStart="@drawable/ic_outline_lock_24"
        android:id="@+id/editTextTextPassword"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/roundstyle"
        android:hint=" Password"
        android:layout_marginTop="20dp"
        app:cornerRadius="28dp"
        android:padding="20px"
        android:inputType="textPassword"
        android:textColorHint="#D9ffffff"
        android:backgroundTint="#0000e6"/>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffaa00"
        android:text="SIGN UP"
        android:onClick="submit"
        app:cornerRadius="28dp"
        android:textAllCaps="false"
        android:textColor="#0000e6"/>




</LinearLayout>